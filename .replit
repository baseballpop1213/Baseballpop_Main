modules = ["nodejs-20"]
[agent]
expertMode = true

[nix]
packages = ["csslint"]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "backend-server"

[[workflows.workflow]]
name = "backend-server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd Backend && npm run dev"
waitForPort = 3000

[workflows.workflow.metadata]
outputType = "console"

[[ports]]
localPort = 3000
externalPort = 3000
